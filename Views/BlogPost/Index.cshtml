@model List<BlogApp.Models.BlogPost>

@{
    ViewData["Title"] = "Index";
}
<div class="home">


<h1>Home</h1>
<p>
    <button style="background-color: #38B4D0; border: none; color: white; text-align:center; font-size: 16px">
        <a class="btn btn-default" asp-action="Create">Create New Blog</a>
    </button>
</p>

<h2>Blogs</h2>

<ul class="blog-cards" style="display: flex; flex-direction:column; gap: 10px">
    @foreach (var item in Model)
    {
        <li class="card" style="border: 4px; overflow:hidden; background-color: #D3E1E2;width: 700px;height:300px; box-shadow:0 4px 8px rgba(0, 0, 0, 0.1);">
            <strong>
                @item.CreationTime
            </strong>
            <a class="btn btn-default" asp-action="Details" asp-route-id="@item.Id">Read More</a>
            <br />
            <div class="body">
                <span>@item.Content</span>
            </div>
            <div>
                
            </div>
        </li>
    }
</ul>

</div>